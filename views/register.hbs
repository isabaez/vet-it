{{#if error}}
    <div class="alert alert-danger" role="alert">
        <i class="fa fa-exclamation" aria-hidden="true"></i>
        <span class="sr-only">Error:</span>
      {{error}}
    </div>
{{/if}}


<div class="paper">
  <div class="col-md-8 col-md-offset-2 col-xs-12">
          <form role="form" method="POST">
            <h1 class="title">Register</h1>
          <div class="form-group">
            <input type="text" class="form-control" id="firstName" name="firstName" placeholder="John" autofocus required>
            <label>First Name</label>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Doe" autofocus required>
            <label>Last Name</label>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" id="email" name="email" placeholder="example@example.com" required>
            <label>Email</label>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" id="password" name="password" placeholder="6 characters minimum" required pattern=".{6,}">
            <label>Password</label>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" id="verifyPassword" name="verifyPassword" placeholder="Verify Password" required>
            <label>Verify Password</label>
          </div>
          <div class="checkbox">
            <input type="checkbox" name="terms" required><a href='/TermsOfUse' target="_newtab">I accept the terms and conditions*</a>
          </div>
  				<a href="/" type="button" class="btn btn-info">Back to Home</a>
          <button class="btn btn-primary" type="submit">Register</button>
        <br>
				<a href="/companyRegister" type="button" class="btn btn-link small">I'M AN EDUCATOR/EMPLOYER, ACTUALLY.</a>
      </form>
  </div>
</div>
