<!-- VETERAN HANDLER -->
{{#if veteran}}
<div class="background">
<div class="card">
  <div class="cover">
    <div class="image"></div>
    <div class="corner"></div>
  </div>
  <div class="profile">
  		{{#if user.facebookId}}
  		<img class="circle" src="https://graph.facebook.com/{{user.facebookId}}/picture?type=large"></img>
  		{{else if user.picture}}
  		<img class="circle" src="{{user.picture}}"></img>
  		{{else}}
  		<img class="circle" src="/images/profile.png"></img>
  		{{/if}}
	</div>
  <div class="info">
    <div class="namecard">
      <h2 id='fName'>{{veteranInfo.firstName}}</h2><h2 id='lName'>{{veteranInfo.lastName}}</h2>
    </div>
    <div id="accordion" role="tablist" aria-multiselectable="true">
      <div class="panel">
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne" class="demographics-head">
              DEMOGRAPHICS
            </a> <a type="button" class="label label-info" id="demographics">Edit</a>
          </h4>
        </div>
    </div>
    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
      <div class="data">
        <div class="following">
          <div class="number">LOCATION</div>
          <p id='loc'>{{veteranInfo.location}}</p>
        </div>
        <div class="following">
          <div class="number">STATUS</div>
          <p id='stat'>{{veteranInfo.status}}</p>
        </div>
        <div class="following">
          <div class="number">ETS</div>
          <p id='ets'>{{date.month}} {{date.day}}, {{date.year}}</p>
        </div>
        </div>
        <div class="data">
        <div class="following">
          <div class="number">PAY GRADE</div>
          <p id='pGrade'>{{veteranInfo.payGrade}}</p>
        </div>
        <div class="following">
          <div class="number">BRANCH</div>
          <p id='bran'>{{veteranInfo.branch}}</p>
        </div>
        <div class="following">
          <div class="number">MOS</div>
          <p id='mos'>{{veteranInfo.MOS}}</p>
        </div>
        </div>
      <div class="data">
        <div class="following">
          <div class="number">GENDER</div>
          <p id='gend'>{{veteranInfo.gender}}</p>
        </div>
          <div class="following">
            <div class="number">ETHNICITY</div>
            <p id='ethnic'>{{veteranInfo.race}}</p>
          </div>
          <div class="following">
            <div class="number">TCE</div>
            <p id='tce'>{{veteranInfo.TCE}}</p>
          </div>
      </div>
  </div> <!--end of demo-->
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingTwo">
      <h4 class="panel-title">
        <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          JOBS, EDUCATION, AND INTERVIEWS
        </a><a type="button" class="label label-info" id="jobsEdInt">Edit</a>
      </h4>
    </div>
  </div>
  <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
    <div class="data">
    <div class="followers">
      <div class="number">COMPANIES WORKED</div>
  		{{#each veteranInfo.companiesWorked}}
  			<span class="label label-info" data-name="cWorked">{{this}}</span>
  		{{/each}}
    </div>
    <div class="followers">
      <div class="number">COMPANIES INTERVIEWED</div>
  		{{#each veteranInfo.companiesInterviewed}}
  			<span class="label label-warning" data-name='cInt'>{{this}}</span>
  		{{/each}}
    </div>
    </div>
    <div class="data">
      <div class="followers">
        <div class="number">PROGRAMS ATTENDED</div>
        {{#each veteranInfo.eduAttended}}
          <span class="label label-primary" data-name='eAttend'>{{this}}</span>
        {{/each}}
      </div>
      <div class="followers">
        <div class="number">PROGRAMS INTERVIEWED</div>
    		{{#each veteranInfo.eduInterviewed}}
    			<span class="label label-success" data-name='eInt'>{{this}}</span>
    		{{/each}}
      </div>
    </div>
</div> <!--end of demo-->
<div class="panel panel-default">
  <div class="panel-heading" role="tab" id="headingThree">
    <h4 class="panel-title">
      <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
        INTERESTS
      </a><a type="button" class="label label-info" id="interests">Edit</a>
    </h4>
  </div>
</div>
  <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
    <div class="data">
      <div class="following">
        <div class="number">COMPANIES INTERESTED IN:</div>
        {{#each veteranInfo.companiesInterested}}
          <span class="label label-primary" data-name='cRested'>{{this}}</span>
        {{/each}}
      </div>
      <div class="following">
        <div class="number">PROGRAMS INTERESTED IN:</div>
        {{#each veteranInfo.eduInterested}}
          <span class="label label-success" data-name='eRested'>{{this}}</span>
        {{/each}}
      </div>
      <div class="following">
        <div class="number">FUNCTIONS INTERESTED IN:</div>
        {{#each veteranInfo.functions}}
          <span class="label label-warning" data-name='fRested'>{{this}}</span>
        {{/each}}
      </div>
    </div>
  </div> <!--end of demo-->
  </div><!--end of panel-->
  </div><!--end of accordian-->
  </div><!--end of info-->
  </div><!--end of card-->
</div><!--end of veteran-->
