<!-- EDIT DEMOGRAPHICS MODAL -->
<div class="modal fade" id="demographicsModal" role="dialog" aria-labelledby="demographicsModal" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title" id="demographicsModalTitle">Edit Demographics</h4>
			</div>
			<form id='demographicsForm'>
        Please type in the boxes.
				<div class="modal-body">
          <div class="row">
					<div class="form-group col-xs-4">
						<input type="text" class="form-control" id="firstName" name="firstName" placeholder="John" required>
						<label>First Name</label>
					</div>
					<div class="form-group col-xs-4">
						<input type="text" class="form-control" id="lastName" name="lastName" placeholder="Doe" required>
						<label>Last Name</label>
					</div>
					<div class="form-group col-xs-4">
						<input type="text" class="form-control" id="location" name="location" placeholder="Example, EX" required>
						<label>Location</label>
					</div>
        </div>
        <div class="row" style="background-color: #f7f9fa; padding-top: 10px;">
					<fieldset class="form-group">
						<select class="form-control" name='status' id="status">
							<option value=''>----Please Select a Status----</option>
						</select>
						<label>Current Military Status</label>
					</fieldset>
          <fieldset class="form-group">
            <select class="form-control" id="race" name="race">
              <option value=''>----Please Select an Ethnicity----</option>
            </select>
            <label>Race/Ethnicity</label>
          </fieldset>
        </div>
					<label>ETS Date</label>
					<fieldset class="form-group">
						<div class="form-inline">
							<select class="form-control" id="ETSMonth" name="ETSMonth">
								<option value=''>----Select a Month----</option>
							</select>
							<select class="form-control" id="ETSDay" name="ETSDay">
								<option value=''>----Select a Day----</option>
							</select>
							<select class="form-control" id="ETSYear" name="ETSYear">
								<option value=''>----Select a Year----</option>
							</select>
						</div>
					</fieldset>
        <div class="row" style="background-color: #f7f9fa; padding-top: 10px; margin-bottom: 10px">
          <fieldset class="form-group col-xs-6" id='gender' style="margin-right: 10px">
            <div class="form-control" style="display: inline-flex;">
              <div class="toggle-button toggle-button--niitty" style="margin: 0">
                <input name="TCE" id="TCEYes" value="Yes" type="radio">
                <label for="TCEYes" style="width: 70px">Yes</label>
                <div class="toggle-button__icon"></div>
              </div>
              <div class="toggle-button toggle-button--niitty" style="margin: 0">
                <input name="TCE" id="TCENo" value="No" type="radio">
                <label for="TCENo" style="width: 70px">No</label>
                <div class="toggle-button__icon"></div>
              </div>
          </div>
            <label>Work Opportunity Tax Credit Eligible?</label>
          </fieldset>
					<fieldset class="form-group col-xs-6" id='gender' style="margin-right: 10px">
            <div class="form-control" style="display: inline-flex;">
              <div class="toggle-button toggle-button--niitty" style="margin: 0">
                <input name="gender" id="genderMale" value="Male" type="radio">
                <label for="genderMale" style="width: 70px">Male</label>
                <div class="toggle-button__icon"></div>
              </div>
              <div class="toggle-button toggle-button--niitty" style="margin: 0">
                <input name="gender" id="genderFemale" value="Female" type="radio">
                <label for="genderFemale" style="width: 70px">Female</label>
                <div class="toggle-button__icon"></div>
              </div>
          </div>
            <label>Gender</label>
					</fieldset>
          </div>
        <div class="row">
          <fieldset class="form-group col-xs-6">
						<input type="text" class="form-control" id="MOS" name="MOS" placeholder="Type here...">
  					<label>Military Occupational Specialty</label>
					</fieldset>
        </div>
        <div class="row" style="background-color: #f7f9fa; padding-top: 10px; margin-bottom: 10px">
          <fieldset class="form-group col-xs-5">
						<select class="form-control" id="branch" name="branch">
							<option value=''>----Please Select a Branch----</option>
						</select>
  					<label>Service Branch</label>
					</fieldset>
					<fieldset class="form-group col-xs-5">
						<select class="form-control" id="payGrade" name="payGrade">
							<option value=''>----Please Select a Pay Grade----</option>
						</select>
            <label>Highest Pay Grade</label>
					</fieldset>
        </div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary" value="Submit">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>
